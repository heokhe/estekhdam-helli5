datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  notes    Note[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Note {
  id    String @id @default(cuid())
  title String
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Category {
  id    Int    @id @default(autoincrement())
  title String

  subcategories Category[] @relation("Subcategory")
  parent        Category?  @relation("Subcategory", fields: [parentId], references: [id])
  parentId      Int?

  data           CategoryData? @relation(fields: [categoryDataId], references: [id])
  categoryDataId Int?

  applications Application[]
}

model CategoryData {
  id         Int        @id @default(autoincrement())
  questions  Question[]
  requiresCV Boolean
  Category   Category[]
}

model Application {
  id   Int      @id @default(autoincrement())
  time DateTime @default(now())

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  name        String
  lastName    String
  phoneNumber String
  email       String?

  answers   Answer[]
  cvAddress String?
}

model Question {
  id             Int           @id @default(autoincrement())
  title          String
  CategoryData   CategoryData? @relation(fields: [categoryDataId], references: [id])
  categoryDataId Int?
  Answer         Answer[]
}

model Answer {
  id            Int          @id @default(autoincrement())
  value         String
  question      Question     @relation(fields: [questionId], references: [id])
  questionId    Int
  Application   Application? @relation(fields: [applicationId], references: [id])
  applicationId Int?
}
