generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  notes     Note[]
  password  Password?
}

model Password {
  hash   String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Note {
  id        String   @id @default(cuid())
  title     String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id             Int           @id @default(autoincrement())
  title          String
  parentId       Int?
  categoryDataId Int?
  parent         Category?     @relation("Subcategory", fields: [parentId], references: [id], onDelete: Cascade)
  data           CategoryData? @relation(fields: [categoryDataId], references: [id], onDelete: Cascade)
  applications   Application[]
  subcategories  Category[]    @relation("Subcategory")
}

model CategoryData {
  id         Int        @id @default(autoincrement())
  requiresCV Boolean?   @default(true)
  Category   Category[]
  questions  Question[]
}

model Application {
  id              Int      @id @default(autoincrement())
  time            DateTime @default(now())
  categoryId      Int
  name            String
  lastName        String
  phoneNumber     String
  email           String?
  marriageStatus  Int
  khedmatType     Int
  recruitmentType Int
  birthDate       DateTime
  imageAddress    String
  cvAddress       String?
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  answers         Answer[]
}

model Question {
  id             Int           @id @default(autoincrement())
  title          String
  categoryDataId Int?
  CategoryData   CategoryData? @relation(fields: [categoryDataId], references: [id], onDelete: Cascade)
  Answer         Answer[]
}

model Answer {
  id            Int          @id @default(autoincrement())
  value         String
  questionId    Int
  applicationId Int?
  Application   Application? @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  question      Question     @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model Admin {
  username String @id
  password String
}
